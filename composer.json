{
    "name": "drupal/drupal",
    "description": "Drupal is an open source content management platform powering millions of websites and applications.",
    "type": "ifsight-docroot",
    "license": "GPL-2.0+",
    "require": {
        "bower-asset/leaflet": "^1.6",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal/address": "^1.8",
        "drupal/admin_toolbar": "^2.2",
        "drupal/better_exposed_filters": "^4.0@beta",
        "drupal/block_field": "^1.0@RC",
        "drupal/cloudflare": "^1.0@beta",
        "drupal/config_split": "^1.4",
        "drupal/core-composer-scaffold": "^9.0",
        "drupal/core-recommended": "^9.0",
        "drupal/ctools": "^3.4",
        "drupal/diff": "^1.0",
        "drupal/easy_breadcrumb": "^1.12",
        "drupal/embed": "^1.3",
        "drupal/entity": "^1.0",
        "drupal/entity_browser": "^2.5",
        "drupal/entity_embed": "^1.1",
        "drupal/entity_reference_revisions": "^1.8",
        "drupal/extlink": "^1.3",
        "drupal/field_group": "^3.0",
        "drupal/focal_point": "^1.4",
        "drupal/fontawesome": "^2.16",
        "drupal/geolocation": "^3.1",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/layout_builder_modal": "^1.1",
        "drupal/layout_builder_restrictions": "^2.7",
        "drupal/layout_builder_styles": "^1.0@beta",
        "drupal/leaflet": "^1.36",
        "drupal/mailsystem": "^4.3",
        "drupal/masquerade": "^2.0@beta",
        "drupal/menu_block": "^1.6",
        "drupal/metatag": "^1.13",
        "drupal/paragraphs": "^1.11",
        "drupal/pathauto": "^1.8",
        "drupal/redirect": "^1.6",
        "drupal/redis": "^1.4",
        "drupal/search_api": "^1.16",
        "drupal/simple_sitemap": "^3.6",
        "drupal/smtp": "^1.0@RC",
        "drupal/twig_tweak": "^2.5",
        "drush/drush": "^10.2",
        "oomphinc/composer-installers-extender": "^1.1",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "drupal/core-dev": "^9.0",
        "drupal/drupal-extension": "^4.0",
        "genesis/behat-fail-aid": "^2.1",
        "mglaman/drupal-check": "^1.1",
        "roave/security-advisories": "dev-master",
        "vanare/behat-cucumber-json-formatter": "~1.1.1"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "preferred-install": "dist",
        "vendor-dir": "./vendor",
        "sort-packages": true
    },
    "extra": {
        "enable-patching": true,
        "drupal-scaffold": {
            "file-mapping": {
                "[web-root]/robots.txt": false,
                "[web-root]/sites/default/default.services.yml": false,
                "[web-root]/sites/default/default.settings.php": false,
                "[web-root]/.ht.router.php": false,
                "[web-root]/example.gitignore": false,
                "[web-root]/.htaccess": false,
                "[web-root]/INSTALL.txt": false,
                "[web-root]/LICENSE.txt": false,
                "[web-root]/README.txt": false,
                "[web-root]/web.config": false
            },
            "excludes": [
                "google123.html"
            ],
            "initial": {
                "sites/default/default.services.yml": "docroot/sites/default/default.services.yml",
                "sites/default/default.settings.php": "docroot/sites/default/default.settings.php",
                "robots.txt": "docroot/robots.txt",
                ".htaccess": "docroot/.htaccess"
            },
            "omit-defaults": true,
            "locations": {
                "web-root": "docroot/"
            }
        },
        "installer-types": [
            "component",
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": ["type:drupal-core"],
            "docroot/modules/contrib/{$name}": ["type:drupal-module"],
            "docroot/profiles/contrib/{$name}": ["type:drupal-profile"],
            "docroot/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
            "docroot/modules/custom/{$name}": ["type:drupal-custom-module"],
            "docroot/themes/custom/{$name}": ["type:drupal-custom-theme"],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:npm-asset",
                "type:bower-asset"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "if [ -d \"docroot/libraries/plupload\" ]; then rm -Rf docroot/libraries/plupload/examples; fi",
            "if [ -n $TRAVIS ]; then find ./docroot -name .git -type d | xargs rm -rf; fi",
            "if [ -n $TRAVIS ]; then find ./vendor -name .git -type d | xargs rm -rf; fi"
	],
	"post-update-cmd": [
            "if [ -d \"docroot/libraries/plupload\" ]; then rm -Rf docroot/libraries/plupload/examples; fi",
            "if [ -n $TRAVIS ]; then find ./docroot -name .git -type d | xargs rm -rf; fi",
            "if [ -n $TRAVIS ]; then find ./vendor -name .git -type d | xargs rm -rf; fi"
        ]
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "ifsight/fulcrum_whitelist",
                "version": "1.1.0",
                "type": "drupal-module",
                "source": {
                    "url": "git@git.ifsight.net:proj/contrib/fulcrum_whitelist/fulcrum_whitelist_drupal_8.git",
                    "type": "git",
                    "reference": "1.1.0"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ifsight/if_varnish_purge_tags",
                "version": "0.2",
                "type": "drupal-module",
                "source": {
                    "url":"git@git.ifsight.net:proj/contrib/if-varnish-purge-tags/if_varnish_purge_tags_drupal_8.git",
                    "type": "git",
                    "reference": "0.2"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "ifsight/if_helper",
                "version": "0.1",
                "type": "drupal-module",
                "source": {
                    "url": "git@git.ifsight.net:proj/contrib/if_helper.git",
                    "type": "git",
                    "reference": "v0.1"
                }
            }
        }
    ]
}
